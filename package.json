{
  "name": "react-class-composer",
  "version": "0.0.1",
  "description": "Simple tool to compose css classnames based on component props",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "ci": "npm run lint && npm run test:coverage && npm run build"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/jest": "^29.2.0",
    "@types/react": "^18.0.23",
    "jest": "^29.2.2",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.3",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entomb/react-class-composer.git"
  },
  "author": "the.entomb@gmail.com",
  "license": "MIT",
  "keywords": [
    "React",
    "Component",
    "style",
    "classname",
    "class",
    "props",
    "utility classes"
  ],
  "bugs": {
    "url": "https://github.com/entomb/react-class-composer/issues"
  },
  "homepage": "https://github.com/entomb/react-class-composer#readme"
